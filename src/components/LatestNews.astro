---
import { getNews } from '../utils/news';

const news = await getNews();
const latestNews = news.slice(0, 3);
---

<div class="grid grid-cols-1 md:grid-cols-3 gap-8">
  {latestNews.map((item) => (
    <article class="group h-full flex flex-col">
      <a href={`/news/${item.id}`} class="block flex-1 flex flex-col">
        <div class="relative aspect-w-16 aspect-h-9 overflow-hidden rounded-lg">
          <img 
            src={item.image} 
            alt="" 
            class="w-full h-full object-cover transform group-hover:scale-105 transition-transform duration-300" 
          />
          <div class="absolute top-4 left-4">
            <span class="bg-secondary text-white text-xs px-3 py-1 uppercase tracking-wider">
              {item.category}
            </span>
          </div>
        </div>
        <div class="pt-6 flex-1 flex flex-col">
          <time class="text-sm text-gray-500 mb-2 block">{item.date}</time>
          <h3 class="text-xl font-bold mb-2 text-primary group-hover:text-secondary transition-colors">
            {item.title}
          </h3>
          <p class="text-gray-600 line-clamp-2 flex-1">{item.content}</p>
        </div>
      </a>
    </article>
  ))}
</div>
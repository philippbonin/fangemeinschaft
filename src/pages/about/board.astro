---
import Layout from '../../layouts/Layout.astro';

const boardMembers = [
  {
    name: 'Andreas Bergander',
    position: 'Finanzen',
    image: '/andreas_bergander.jpg',
    description: 'Seit 2000 im Vorstand.',
    email: 'andreas.bergander@fangemeinschaft.de'
  },
  {
    name: 'Sarah Schmidt',
    position: 'Ticketing',
    image: '/steffi_schaub.jpg',
    description: 'Seit 2009 im Vorstand..',
    email: 'steffi.schaub@fangemeinschaft.dee'
  },
  {
    name: 'Holger Nutto',
    position: 'Leitung "Hauptabteilung" Mitgliederbetreuung, Fanbeirat',
    image: '/holger_nutto.jpg',
    description: 'Seit 2023 im Vorstand.',
    email: 'finanzen@fangemeinschaft.de'
  },
  {
    name: 'Julia Wagner',
    position: 'Schriftführerin',
    image: '/sonja_god.jpg',
    description: 'Seit 2000 im Vorstand.',
    email: 'schriftfuehrer@fangemeinschaft.de'
  },
  {
    name: 'Julia Wagner',
    position: 'Schriftführerin',
    image: '/sonja_god.jpg',
    description: 'Seit 2000 im Vorstand.',
    email: 'schriftfuehrer@fangemeinschaft.de'
  }
  
];
---

<Layout title="Vorstand - Fangemeinschaft">
  <div class="container mx-auto px-4 py-12">
    <h1 class="text-4xl font-bold mb-8">Vorstand</h1>

    <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
      {boardMembers.map((member) => (
        <div class="bg-white rounded-lg shadow-md overflow-hidden">
          <div class="grid grid-cols-1 md:grid-cols-3">
            <div class="aspect-w-3 aspect-h-4 md:aspect-none md:h-full">
              <img 
                src={member.image} 
                alt={member.name}
                class="w-full h-full object-cover"
              />
            </div>
            <div class="p-6 md:col-span-2">
              <h3 class="text-xl font-bold mb-1">{member.name}</h3>
              <div class="text-secondary font-semibold mb-2">{member.position}</div>
              <p class="text-gray-600 mb-4">{member.description}</p>
              <a 
                href={`mailto:${member.email}`}
                class="inline-flex items-center text-secondary hover:text-secondary/80 transition-colors"
              >
                <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 mr-2" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
                </svg>
                {member.email}
              </a>
            </div>
          </div>
        </div>
      ))}
    </div>
  </div>
</Layout>
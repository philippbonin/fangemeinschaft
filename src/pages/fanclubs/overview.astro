---
import Layout from '../../layouts/Layout.astro';
import { getFanclubs } from '../../utils/fanclubs';

const fanclubs = await getFanclubs();
---

<Layout title="Fanclubs Übersicht - Fangemeinschaft">
  <div class="container mx-auto px-4 py-12">
    <h1 class="text-3xl font-bold mb-8">Fanclubs Übersicht</h1>

    <div class="bg-white rounded-lg shadow-md overflow-hidden">
      <div class="overflow-x-auto">
        <table class="min-w-full divide-y divide-gray-200">
          <thead class="bg-gray-50">
            <tr>
              <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Name</th>
              <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">1. Vorstand</th>
              <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Telefon</th>
              <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Mobil</th>
              <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Email</th>
              <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Website</th>
            </tr>
          </thead>
          <tbody class="bg-white divide-y divide-gray-200">
            {fanclubs.map((club) => (
              <tr class="hover:bg-gray-50">
                <td class="px-6 py-4 whitespace-nowrap text-sm font-medium text-gray-900">
                  {club.name}
                </td>
                <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">
                  {club.president}
                </td>
                <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">
                  {club.phone}
                </td>
                <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">
                  {club.mobile}
                </td>
                <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">
                  {club.email && (
                    <a 
                      href={`mailto:${club.email}`}
                      class="text-secondary hover:text-secondary/80 transition-colors"
                    >
                      {club.email}
                    </a>
                  )}
                </td>
                <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">
                  {club.website && (
                    <a 
                      href={club.website}
                      target="_blank"
                      rel="noopener noreferrer" 
                      class="text-secondary hover:text-secondary/80 transition-colors flex items-center space-x-1"
                    >
                      <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14" />
                      </svg>
                      <span>Website</span>
                    </a>
                  )}
                </td>
              </tr>
            ))}
          </tbody>
        </table>
      </div>
    </div>

    <div class="mt-8 text-center">
      <a
        href="/fanclubs/register"
        class="inline-block bg-secondary text-white px-6 py-3 rounded-md hover:bg-secondary/90 transition-colors"
      >
        Fanclub werden
      </a>
    </div>
  </div>
</Layout>
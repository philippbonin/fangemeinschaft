---
import Layout from '../layouts/Layout.astro';
import LatestNews from '../components/LatestNews.astro';
import NextMatches from '../components/NextMatches.astro';
import QuickLinks from '../components/QuickLinks.astro';
---

<Layout title="Fangemeinschaft - Home">
  <div class="space-y-0">
    <!-- Hero Section -->
    <section class="relative h-[80vh] -mt-[80px] pt-[80px]">
      <div class="absolute inset-0 bg-gradient-to-r from-primary/80 to-primary/60">
        <div class="absolute inset-0 bg-[url('https://images.unsplash.com/photo-1522778119026-d647f0596c20?auto=format&fit=crop&q=80')] mix-blend-overlay bg-center bg-cover"></div>
      </div>
      <div class="relative h-full container mx-auto px-4 flex items-center">
        <div class="max-w-2xl text-white">
          <span class="inline-block bg-secondary px-4 py-1 text-sm uppercase tracking-wider mb-6">Nächstes Spiel</span>
          <h1 class="text-5xl md:text-7xl font-bold mb-6 leading-tight">Fangemeinschaft vs FC Rival</h1>
          <p class="text-xl md:text-2xl mb-8 opacity-90">25. März 2024 · 15:00 Uhr · Heimstadion</p>
          <div class="flex gap-4">
            <a href="/tickets" class="bg-secondary hover:bg-secondary/90 text-white px-8 py-4 uppercase tracking-wider text-sm font-semibold transition-colors">
              Tickets kaufen
            </a>
            <a href="/spielinfo" class="bg-white/10 hover:bg-white/20 text-white px-8 py-4 uppercase tracking-wider text-sm font-semibold transition-colors backdrop-blur-sm">
              Mehr Infos
            </a>
          </div>
        </div>
      </div>
    </section>

    <!-- Quick Links -->
    <QuickLinks />

    <!-- Latest News Section -->
    <section class="py-16">
      <div class="container mx-auto px-4">
        <div class="flex justify-between items-center mb-12">
          <h2 class="text-3xl font-bold text-primary">Aktuelle News</h2>
          <a href="/news" class="text-secondary hover:underline uppercase text-sm tracking-wider font-semibold">
            Alle News →
          </a>
        </div>
        <LatestNews />
      </div>
    </section>

    <!-- Next Matches Section -->
    <section class="bg-gray-100 py-16 relative">
      <div class="absolute inset-0 opacity-10">
        <img src="https://images.unsplash.com/photo-1489944440615-453fc2b6a9a9?auto=format&fit=crop&q=80" alt="" class="w-full h-full object-cover" />
      </div>
      <div class="container mx-auto px-4 relative">
        <h2 class="text-3xl font-bold text-primary mb-12">Nächste Spiele</h2>
        <NextMatches />
      </div>
    </section>

    <!-- Sponsors Section -->
    <section class="py-16">
      <div class="container mx-auto px-4">
        <h2 class="text-2xl font-bold text-center text-primary mb-12">Unser Partner</h2>
        <div class="flex justify-center">
          <a href="https://www.rothaus.de" target="_blank" rel="noopener noreferrer" class="block hover:opacity-80 transition-opacity">
            <img 
              src="https://www.rothaus.de/typo3conf/ext/throha/Resources/Public/Images/logo-rothaus.svg" 
              alt="Rothaus Logo" 
              class="h-24 w-auto"
            />
          </a>
        </div>
      </div>
    </section>
  </div>
</Layout>
---
import Layout from '../../layouts/Layout.astro';
import { getNews } from '../../utils/news';

const news = await getNews();
---

<Layout title="News - Fangemeinschaft">
  <div class="container mx-auto px-4 py-12">
    <h1 class="text-4xl font-bold mb-8">News</h1>
    
    <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
      {news.map((item) => (
        <article class="group">
          <a href={`/news/${item.id}`} class="block">
            <div class="relative h-64 overflow-hidden">
              <img 
                src={item.image} 
                alt="" 
                class="w-full h-full object-cover transform group-hover:scale-105 transition-transform duration-300" 
              />
              <div class="absolute top-4 left-4">
                <span class="bg-secondary text-white text-xs px-3 py-1 uppercase tracking-wider">
                  {item.category}
                </span>
              </div>
            </div>
            <div class="pt-6">
              <time class="text-sm text-gray-500 mb-2 block">{item.date}</time>
              <h3 class="text-xl font-bold mb-2 text-primary group-hover:text-secondary transition-colors">
                {item.title}
              </h3>
              <p class="text-gray-600 line-clamp-2">{item.content}</p>
            </div>
          </a>
        </article>
      ))}
    </div>
  </div>
</Layout>
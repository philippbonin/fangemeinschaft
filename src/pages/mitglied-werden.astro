---
import Layout from '../layouts/Layout.astro';

const benefits = [
  {
    title: 'Ticket-Vorverkaufsrecht',
    description: 'Sichere dir als Mitglied Tickets vor allen anderen',
    icon: '🎟️'
  },
  {
    title: 'Exklusive Events',
    description: 'Zugang zu besonderen Veranstaltungen und Meet & Greets',
    icon: '🎉'
  },
  {
    title: 'Shop-Rabatte',
    description: '10% Rabatt auf alle Artikel im Fan-Shop',
    icon: '🛍️'
  },
  {
    title: 'Vereinsmagazin',
    description: 'Kostenloser Bezug unseres Vereinsmagazins',
    icon: '📰'
  }
];

const membershipTypes = [
  {
    name: 'Vollmitgliedschaft',
    price: 120,
    interval: 'Jahr',
    benefits: [
      'Stimmrecht bei der Mitgliederversammlung',
      'Ticket-Vorverkaufsrecht',
      'Exklusive Events',
      '10% Shop-Rabatt',
      'Vereinsmagazin'
    ]
  },
  {
    name: 'Jugendmitgliedschaft',
    price: 60,
    interval: 'Jahr',
    benefits: [
      'Für Mitglieder unter 18 Jahren',
      'Ticket-Vorverkaufsrecht',
      'Exklusive Events',
      '10% Shop-Rabatt',
      'Vereinsmagazin'
    ]
  },
  {
    name: 'Familienmitgliedschaft',
    price: 200,
    interval: 'Jahr',
    benefits: [
      'Für 2 Erwachsene und bis zu 3 Kinder',
      'Stimmrecht für Erwachsene',
      'Ticket-Vorverkaufsrecht',
      'Exklusive Events',
      '10% Shop-Rabatt',
      'Vereinsmagazin'
    ]
  }
];
---

<Layout title="Mitglied werden - Fangemeinschaft">
  <div class="bg-gray-50">
    <!-- Hero Section -->
    <div class="relative bg-gray-900 py-24">
      <div class="absolute inset-0 overflow-hidden">
        <img 
          src="https://images.unsplash.com/photo-1459865264687-595d652de67e?auto=format&fit=crop&q=80" 
          alt="Fans im Stadion" 
          class="w-full h-full object-cover opacity-30"
        />
      </div>
      <div class="relative container mx-auto px-4">
        <h1 class="text-4xl md:text-6xl font-bold text-white mb-4">Werde Teil der Familie</h1>
        <p class="text-xl text-gray-300 max-w-2xl">
          Als Mitglied der Fangemeinschaft bist du nicht nur Fan, sondern ein wichtiger Teil unserer Gemeinschaft.
        </p>
      </div>
    </div>

    <div class="container mx-auto px-4 py-12">
      <!-- Benefits -->
      <section class="mb-16">
        <h2 class="text-3xl font-bold text-center mb-12">Deine Vorteile als Mitglied</h2>
        <div class="grid grid-cols-1 md:grid-cols-4 gap-8">
          {benefits.map((benefit) => (
            <div class="bg-white p-6 rounded-lg shadow-md text-center">
              <div class="text-4xl mb-4">{benefit.icon}</div>
              <h3 class="text-xl font-bold mb-2">{benefit.title}</h3>
              <p class="text-gray-600">{benefit.description}</p>
            </div>
          ))}
        </div>
      </section>

      <!-- Membership Types -->
      <section class="mb-16">
        <h2 class="text-3xl font-bold text-center mb-12">Mitgliedschaften</h2>
        <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
          {membershipTypes.map((type) => (
            <div class="bg-white rounded-lg shadow-md p-6">
              <h3 class="text-xl font-bold mb-2">{type.name}</h3>
              <div class="text-3xl font-bold text-secondary mb-4">
                €{type.price}<span class="text-base font-normal text-gray-600">/{type.interval}</span>
              </div>
              <ul class="space-y-3 mb-6">
                {type.benefits.map((benefit) => (
                  <li class="flex items-center text-gray-600">
                    <svg class="w-5 h-5 text-secondary mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
                    </svg>
                    {benefit}
                  </li>
                ))}
              </ul>
              <a
                href="#mitglied-werden"
                class="block w-full bg-secondary text-white text-center py-2 rounded hover:bg-secondary/90 transition-colors"
              >
                Jetzt Mitglied werden
              </a>
            </div>
          ))}
        </div>
      </section>

      <!-- Registration Form -->
      <section id="mitglied-werden" class="max-w-2xl mx-auto">
        <h2 class="text-3xl font-bold text-center mb-8">Mitgliedsantrag</h2>
        <form class="bg-white rounded-lg shadow-md p-6">
          <div class="grid grid-cols-1 md:grid-cols-2 gap-6 mb-6">
            <div>
              <label class="block text-sm font-medium text-gray-700 mb-1" for="firstName">
                Vorname
              </label>
              <input
                type="text"
                id="firstName"
                name="firstName"
                required
                class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-secondary focus:border-transparent"
              />
            </div>
            <div>
              <label class="block text-sm font-medium text-gray-700 mb-1" for="lastName">
                Nachname
              </label>
              <input
                type="text"
                id="lastName"
                name="lastName"
                required
                class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-secondary focus:border-transparent"
              />
            </div>
          </div>

          <div class="mb-6">
            <label class="block text-sm font-medium text-gray-700 mb-1" for="email">
              E-Mail
            </label>
            <input
              type="email"
              id="email"
              name="email"
              required
              class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-secondary focus:border-transparent"
            />
          </div>

          <div class="mb-6">
            <label class="block text-sm font-medium text-gray-700 mb-1" for="birthDate">
              Geburtsdatum
            </label>
            <input
              type="date"
              id="birthDate"
              name="birthDate"
              required
              class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-secondary focus:border-transparent"
            />
          </div>

          <div class="mb-6">
            <label class="block text-sm font-medium text-gray-700 mb-1" for="membershipType">
              Mitgliedschaft
            </label>
            <select
              id="membershipType"
              name="membershipType"
              required
              class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-secondary focus:border-transparent"
            >
              <option value="">Bitte wählen</option>
              {membershipTypes.map((type) => (
                <option value={type.name}>{type.name} (€{type.price}/{type.interval})</option>
              ))}
            </select>
          </div>

          <div class="mb-6">
            <label class="flex items-start space-x-2">
              <input
                type="checkbox"
                required
                class="mt-1"
              />
              <span class="text-sm text-gray-600">
                Ich akzeptiere die <a href="/datenschutz" class="text-secondary hover:underline">Datenschutzerklärung</a> und 
                stimme der Verarbeitung meiner Daten gemäß der <a href="/agb" class="text-secondary hover:underline">AGB</a> zu.
              </span>
            </label>
          </div>

          <button
            type="submit"
            class="w-full bg-secondary text-white py-3 rounded-md hover:bg-secondary/90 transition-colors font-semibold"
          >
            Mitgliedsantrag absenden
          </button>
        </form>
      </section>
    </div>
  </div>
</Layout>
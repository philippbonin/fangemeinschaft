---
import AdminLayout from '../../../layouts/AdminLayout.astro';
import { isAuthenticated } from '../../../utils/auth';

const authenticated = await isAuthenticated(Astro);

if (!authenticated) {
  return Astro.redirect('/admin/login');
}
---

<AdminLayout title="Spieler erstellen">
  <div class="p-6">
    <div class="mb-8 flex items-center justify-between">
      <h1 class="text-2xl font-bold">Spieler erstellen</h1>
      <a 
        href="/admin/team" 
        class="text-gray-600 hover:text-secondary flex items-center space-x-1"
      >
        <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18" />
        </svg>
        <span>Zur체ck</span>
      </a>
    </div>

    <div class="bg-white rounded-lg shadow-sm">
      <form action="/api/team" method="POST" class="p-6">
        <div class="space-y-6">
          <div>
            <label class="block text-sm font-medium text-gray-700 mb-1" for="name">
              Name
            </label>
            <input
              type="text"
              id="name"
              name="name"
              required
              class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-secondary focus:border-transparent"
            />
          </div>

          <div>
            <label class="block text-sm font-medium text-gray-700 mb-1" for="number">
              R체ckennummer
            </label>
            <input
              type="number"
              id="number"
              name="number"
              min="1"
              max="99"
              required
              class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-secondary focus:border-transparent"
            />
          </div>

          <div>
            <label class="block text-sm font-medium text-gray-700 mb-1" for="position">
              Position
            </label>
            <select
              id="position"
              name="position"
              required
              class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-secondary focus:border-transparent"
            >
              <option value="">Bitte w채hlen</option>
              <option value="Goalkeeper">Torwart</option>
              <option value="Defender">Verteidiger</option>
              <option value="Midfielder">Mittelfeldspieler</option>
              <option value="Forward">St체rmer</option>
            </select>
          </div>

          <div>
            <label class="block text-sm font-medium text-gray-700 mb-1" for="image">
              Bild URL
            </label>
            <input
              type="url"
              id="image"
              name="image"
              required
              class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-secondary focus:border-transparent"
            />
          </div>

          <div class="flex justify-end space-x-4">
            <a 
              href="/admin/team"
              class="px-4 py-2 border border-gray-300 rounded-md text-gray-700 hover:bg-gray-50 transition-colors"
            >
              Abbrechen
            </a>
            <button
              type="submit"
              class="bg-secondary text-white px-4 py-2 rounded-md hover:bg-secondary/90 transition-colors"
            >
              Speichern
            </button>
          </div>
        </div>
      </form>
    </div>
  </div>
</AdminLayout>